@{
}
@model Movie

<h1>Movie Collection</h1>
@* asp-controller="Home" asp-action="SubmitMovie" *@

<form  method="post">

    <input type="hidden" asp-for="Mission06_MovieId" />

    <label asp-for="Mission06_Title" >Title:</label>
    <input asp-for="Mission06_Title" required />
    <br />
    <label asp-for="Mission07_CategoryId">Category:</label>
    <select>
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.Mission07_CategoryId">@c.Mission07_Category</option>
        }
    </select>
    <br />
    <label asp-for="Mission06_Year" min="1888">Year:</label>
    <input asp-for="Mission06_Year" required />
    <br />
    <label asp-for="Mission06_Director">Director:</label>
    <input asp-for="Mission06_Director" required/>
    <br />
    <label asp-for="Mission06_Rating">Rating:</label>
    <select asp-for="Mission06_Rating" required>
        <!-- Movie Ratings -->
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="NC-17">NC-17</option>
        <!-- TV Ratings -->
        <option value="TV-Y">TV-Y</option>
        <option value="TV-Y7">TV-Y7</option>
        <option value="TV-G">TV-G</option>
        <option value="TV-PG">TV-PG</option>
        <option value="TV-14">TV-14</option>
        <option value="TV-MA">TV-MA</option>
       
    </select>
    <br />
    <label asp-for="Mission06_Edited">Edited:</label>
    <select asp-for="Mission06_Edited">
        <option value="0">No</option>
        <option value="1">Yes</option>
    </select>
    <br />
    <label asp-for="CopiedToPlex">Copied To Plex:</label>
    <select asp-for="CopiedToPlex">
        <option value="0">No</option>
        <option value="1">Yes</option>
    </select>
    
    <br />
    <label asp-for="Mission06_Lent_To">Lent to:</label>
    <input asp-for="Mission06_Lent_To" />
    <br />
    <label asp-for="Mission06_Notes">Notes:</label>
    <input asp-for="Mission06_Notes" type="text" maxlength="25" />
    <br />

    <button type="submit">Submit Movie</button>

</form>