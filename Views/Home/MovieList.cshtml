@{
}


@model List<Movie>



<table style="color : white;" class="table table-bordered">
    <thead>
        <tr>
          
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>LentTo</td>
       @*      <td>Copied to Plex</td> *@
            <td>Notes</td>
        </tr>
    </thead>

   
   @foreach (var movie in Model) {
        <tbody>
            <tr>
        
                <td>@movie.Mission07_CategoryId</td>
                <td>@movie.Mission06_Title</td>
                <td>@movie.Mission06_Year</td>
                <td>@movie.Mission06_Director</td>
                <td>@movie.Mission06_Rating</td>
                <td>@movie.Mission06_Edited</td>
                <td>@movie.Mission06_Lent_To</td>
                <td>@movie.Mission06_Notes</td>

                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@movie.Mission06_MovieId">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@movie.Mission06_MovieId">Delete</a></td>
            </tr>
        </tbody>
   }
  
</table>